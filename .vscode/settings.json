{
  "cursor.mcp.servers": {
    "github-workflow": {
      "command": "python3",
      "args": [
        "${workspaceFolder}/scripts/mcp_github_server.py"
      ],
      "description": "GitHub workflow management (issues, PRs, CI)"
    },
    "project-graph": {
      "command": "python3",
      "args": [
        "${workspaceFolder}/scripts/mcp_project_graph.py"
      ],
      "description": "Project graph navigation (90-95% token savings)"
    }
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/*.egg-info": true
  }
}
